<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Roman.MainPage" Title="Roman Numeral Converter Pro">

   
        <StackLayout Spacing="10" Padding="30, 40">
                <Label Text="Numbers" FontSize="Large" HorizontalTextAlignment="Center"/>
                <Border StrokeThickness="1" Stroke="Gray">
                    <Entry x:Name="txtNumber" Keyboard="Numeric" Placeholder="Ex. 1-9999" TextChanged="TxtNumber_OnTextChanged"/>
                </Border>
                <Label Text="Roman" FontSize="Large" HorizontalTextAlignment="Center"/>
                <Border StrokeThickness="1" Stroke="Gray">
                    <Entry x:Name="txtRoman" Placeholder="Ex. I-M" TextChanged="TxtRoman_OnTextChanged"/>
                </Border>
                <Button x:Name="btnConversion" Margin="0, 100, 0, 10" Text="Convert" FontSize="Medium" Clicked="Convert"/>
                <Button x:Name="btnReset" Text="Reset" FontSize="Medium" Clicked="Reset" />
        </StackLayout>

</ContentPage>
